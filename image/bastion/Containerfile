FROM alpine

RUN apk add --update --no-cache \
    openssh-server \
    # newer nsenter
    util-linux \
    # client is useful for debugging & rsync
    openssh-client

ENV USER=dev UID=3000

RUN echo "Adding user: ${USER} (${UID})"; \
    adduser -D -u ${UID} -s /bin/sh ${USER} && \
    sed -i "s/${USER}:!/${USER}:*/g" /etc/shadow

RUN rm /etc/motd

EXPOSE 2222/tcp
# home of user
VOLUME "/data"

ADD entrypoint.sh /

USER 3000

ENTRYPOINT [ "/entrypoint.sh" ]
